<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

    <ImageView
            android:id="@+id/dateImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/username"
              android:layout_toRightOf="@+id/dateImage"
              android:text="Username"
              android:textSize="30sp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="150dp"
                  android:id="@+id/date_overview"
                  android:orientation="vertical"
                  android:layout_below="@+id/dateImage"
                  android:layout_marginTop="16dp"
                  android:gravity="center"
                  android:background="@drawable/border">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Date Overview"
                  android:textSize="48sp"/>
    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
    android:id="@+id/rating_heading"
    android:layout_below="@+id/date_overview"
    android:layout_marginTop="16dp"
    android:textSize="22sp"
    android:text="Overall rating"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="16dp"
    android:id="@+id/rating"
    android:layout_below="@+id/rating_heading">

    <ImageView android:layout_width="40dp"
               android:layout_height="40dp"
    android:id="@+id/first_start"
    android:src="@drawable/ic_star_border_black_24dp"/>

        <ImageView android:layout_width="40dp"
                   android:layout_height="40dp"
    android:id="@+id/second_start"
    android:src="@drawable/ic_star_border_black_24dp"/>

        <ImageView android:layout_width="40dp"
                   android:layout_height="40dp"
    android:id="@+id/third_start"
    android:src="@drawable/ic_star_border_black_24dp"/>

        <ImageView android:layout_width="40dp"
                   android:layout_height="40dp"
    android:id="@+id/fourth_start"
    android:src="@drawable/ic_star_border_black_24dp"/>

        <ImageView android:layout_width="40dp"
                   android:layout_height="40dp"
    android:id="@+id/fifty_start"
    android:src="@drawable/ic_star_border_black_24dp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal">

        <ImageView android:layout_width="60dp"
                   android:layout_height="60dp"
        android:id="@+id/nope"
        android:src="@drawable/ic_clear_black_24dp"
        android:layout_marginRight="64dp"/>

        <ImageView android:layout_width="60dp"
                   android:layout_height="60dp"
        android:id="@+id/yeap"
        android:src="@drawable/ic_check_black_24dp"/>

    </LinearLayout>

</RelativeLayout>